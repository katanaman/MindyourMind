<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    
    <!-- The gutter on the left and right side of most of our pages -->
    <dimen name="gutter">10dp</dimen>
    
	<!-- Half of the spacing we'll add between task cards. the full spacing will be double this number -->
	<dimen name="task_card_half_spacing">15dp</dimen>
	
	<!-- The elevation of the task cards -->
	<dimen name="task_card_elevation">6dp</dimen>
	
	<!-- the little extra height needed to go under the status bar -->
	<dimen name="status_bar_height">25dp</dimen>
	
</resources>
