<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.qub.mindyourmind"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <provider 
            android:name=".providers.TaskProvider"
            android:authorities="uk.ac.qub.mindyourmind.providers.TaskProvider"
            android:exported="false"/>
        
        <activity
            android:name=".activities.LoginSignUpActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/authenticate"
            android:parentActivityName=".LoginSignUpActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.ac.qub.mindyourmind.activities.SignUpActivity"/>
        </activity>
        
        <activity
            android:name=".activities.MainMenuActivityTemp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GuidanceCentreActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activities.TaskListActivity"
            android:label="Diary" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.TransparentActionBar"
            android:name=".activities.TaskEditActivity"
            android:label=""
            android:parentActivityName=".TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tasks.TaskListActivity" />
        </activity>
        
        <activity
            android:name=".activities.CalendarViewActivity"
            android:label="" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="uk.ac.qub.mindyourmind.activities.PreferencesActivity"/>
    </application>

</manifest>
